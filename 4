Php:
<?php
function fib($n){
if($n<2){
return $n;
}
return fib($n-1)+fib($n-2);
}
$n=$_POST["n1"];
echo "Fibonacci Series:<br>";
for($i=0;$i<$n;$i++){
echo fib($i)."<br>";
}
?>
